
{% extends 'base.html.twig' %}
<!DOCTYPE html>
<html lang="en">

<head>
{% block title %}Statistique des evenements{% endblock %}
</head>
<body>

{% block body %}

<div class="card-body chart-container">
            <h4 class="card-title">Statistiques des evenement par nombre participants</h4>
            <canvas id="user-role-chart" height="320" width="320"></canvas>
        </div>
    </div>
    <script>

            document.addEventListener('DOMContentLoaded', function() {
            var ctx = document.getElementById('user-role-chart').getContext('2d');
            var labels = {{ labels|raw }};
            var data = {{ data|raw }};

            // Convert the data into a format understandable by Chart.js
            var chartData = {
            labels: labels,
            datasets: [{
            data: data,
            backgroundColor: [
            'rgba(255, 99, 132, 0.5)',
            'rgba(54, 162, 235, 0.5)',
            'rgba(255, 206, 86, 0.5)',
            'rgba(75, 192, 192, 0.5)',
            'rgba(153, 102, 255, 0.5)',
            'rgba(255, 159, 64, 0.5)'
            ],
            borderColor: [
            'rgba(255, 99, 132, 1)',
            'rgba(54, 162, 235, 1)',
            'rgba(255, 206, 86, 1)',
            'rgba(75, 192, 192, 1)',
            'rgba(153, 102, 255, 1)',
            'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
        };

            var pieChart = new Chart(ctx, {
            type: 'pie',
            data: chartData,
            options: {
            responsive: true,
            maintainAspectRatio: false,
            animation: {
            duration: 0 // Disable animations
        },
            tooltips: {
            callbacks: {
            label: function(tooltipItem, data) {
            return data.labels[tooltipItem.index]; // Return label instead of percentage
        }
        }
        }
        }
        });
        });


    </script>
{%endblock%}
</body>
</html>

