{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">Terrain</div>
                    <div class="card-body">
                        {% block body %}
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <th>IdTerrain</th>
                                        <td>{{ terrain.idTerrain }}</td>
                                    </tr>
                                    <tr>
                                        <th>Nomterrain</th>
                                        <td>{{ terrain.nomterrain }}</td>
                                    </tr>
                                    <tr>
                                        <th>Localisation</th>
                                        <td>{{ terrain.localisation }}</td>
                                    </tr>
                                    <tr>
                                        <th>Taille</th>
                                        <td>{{ terrain.taille }}</td>
                                    </tr>
                                </tbody>
                            </table>

                            <a href="{{ path('app_terrain_index') }}" class="btn btn-secondary">Back to list</a>
                            <a href="{{ path('app_terrain_edit', {'idTerrain': terrain.idTerrain}) }}" class="btn btn-warning">Edit</a>

                            {{ include('terrain/_delete_form.html.twig') }}
                        {% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
