{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <h1 class="my-4">Détails du sport</h1>
        <div class="row">
            <div class="col-md-6">
                <table class="table">
                    <tbody>
                        <tr>
                            <th scope="row">Id</th>
                            <td>{{ sport.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Nom</th>
                            <td>{{ sport.nom }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Description</th>
                            <td>{{ sport.description }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Image</th>
                            <td>
                                {% if sport.image %}
                                    <img src="{{ asset('uploads/images/' ~ sport.image) }}" alt="Image du sport {{ sport.nom }}" style="max-width: 200px; max-height: 200px;">
                                {% else %}
                                    Pas d'image associée
                                {% endif %}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <a href="{{ path('app_sport_index') }}" class="btn btn-secondary">Retour à la liste</a>
                <a href="{{ path('app_sport_edit', {'id': sport.id}) }}" class="btn btn-primary">Modifier</a>
                {{ include('sport/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
