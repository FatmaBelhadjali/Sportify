{% extends 'base.html.twig' %}

{% block content %}
<div>
    <input type="text" id="search" placeholder="Recherche par nom" ">
</div>

    <div class="container">
        <h1 class="my-4">Liste des sports</h1>
        <div class="row">
            <div class="col">

                <table id="results" class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Description</th>
                            <th scope="col">Image</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for sport in sports %}
                            <tr>
                                <td>{{ sport.id }}</td>
                                <td>{{ sport.nom }}</td>
                                <td>{{ sport.description }}</td>
                                <td>
                                    {% if sport.image %}
                                        <img src="{{ asset('uploads/images/' ~ sport.image) }}" alt="Image du sport {{ sport.nom }}" style="max-width: 100px; max-height: 100px;">
                                    {% else %}
                                        Pas d'image associée
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{ path('app_sport_show', {'id': sport.id}) }}" class="btn btn-primary btn-sm">Voir</a>
                                    <a href="{{ path('app_sport_edit', {'id': sport.id}) }}" class="btn btn-success btn-sm">Modifier</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">Aucun enregistrement trouvé</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <a href="{{ path('app_sport_new') }}" class="btn btn-primary">Ajouter un nouveau sport</a>
                 <a href="{{ path('generate_sports_pdf') }}" class="btn btn-primary">Generate PDF</a>

            </div>
        
        </div>
        
    </div>
    {% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        $('#search').keyup(function() {
            var query = $(this).val();
            $.ajax({
                url: "{{ path('app_sport_search') }}",
                type: "POST",
                data: {query: query},
                success: function(data) {
                    $('#results').html(data);
                    $('#results').css('width', '100%');
                    $('#results').css('position', 'static');
                }
            });
        });
    });
</script>
{# Pagination #}
<script src="{{ asset('https://code.jquery.com/jquery-3.5.1.min.js') }}"></script>
<script>
    $(document).ready(function() {
    // Set up click event listener for pagination links
    $('#pagination-container').on('click', 'a', function(event) {
    event.preventDefault();

    // Get the URL of the next page of results from the pagination link
    var url = $(this).attr('href');
    // Send an AJAX request to load the next page of results
    $.ajax({
    url: url,
    type: 'GET',
    success: function(response) {
    console.log(response); // Log the response to the console
    // Replace the current content with the new content from the AJAX response
    $('#tabv').html($(response).find('#tabv').html());
    $('#pagination-container').html($(response).find('#pagination-container').html());
    },
    error: function(jqXHR, textStatus, errorThrown) {
    console.log('AJAX error: ' + textStatus + ' - ' + errorThrown);
    }
    });
    });
    });
</script>
    {# Pagination #}
    {% endblock %}
        <div class="pagination-container" style="text-align: right; margin-bottom: -10px; position: absolute; top: 0; right: 0;">
        {{ knp_pagination_render(sports) }}
        </div>
{% endblock %}
