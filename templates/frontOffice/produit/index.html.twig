{% extends 'frontOffice/base.html.twig' %}

{% block head %}
<head>
  <title>Soccer &mdash; Website by Colorlib</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">

  <link rel="stylesheet" href={{asset('frontOffice/fonts/icomoon/style.css')}}>

  <link rel="stylesheet" href={{asset('frontOffice/css/bootstrap/bootstrap.css')}}>
  <link rel="stylesheet" href={{asset('frontOffice/css/jquery-ui.css')}}>
  <link rel="stylesheet" href={{asset('frontOffice/css/owl.carousel.min.css')}}>
  <link rel="stylesheet" href={{asset('frontOffice/css/owl.theme.default.min.css')}}>
  <link rel="stylesheet" href={{asset('frontOffice/css/owl.theme.default.min.css')}}>

  <link rel="stylesheet" href={{asset('frontOffice/css/jquery.fancybox.min.css')}}>

  <link rel="stylesheet" href={{asset('frontOffice/css/bootstrap-datepicker.css')}}>

  <link rel="stylesheet" href={{asset('frontOffice/fonts/flaticon/font/flaticon.css')}}>

  <link rel="stylesheet" href={{asset('frontOffice/css/aos.css')}}>

  <link rel="stylesheet" href={{asset('frontOffice/css/style.css')}}>
</head>
{% endblock %}

{% block header %}
    <header class="site-navbar py-4" role="banner">

      <div class="container">
        <div class="d-flex align-items-center">
          <div class="site-logo">
            <a href="index.html">
              <img src="{{asset('frontOffice/images/logo.png')}}" alt="Logo">
            </a>
          </div>
          <div class="ml-auto">
            <nav class="site-navigation position-relative text-right" role="navigation">
              <ul class="site-menu main-menu js-clone-nav mr-auto d-none d-lg-block">
                <li ><a href="index.html" class="nav-link">Home</a></li>
                <li><a href="matches.html" class="nav-link">Matches</a></li>
                <li><a href="players.html" class="nav-link">Players</a></li>
                <li><a href="blog.html" class="nav-link">Blog</a></li>
                <li><a href="contact.html" class="nav-link">Contact</a></li>
                <li class="active"><a href="{{path('home_produit')}}" class="nav-link">Produits</a></li>
              </ul>
            </nav>

            <a href="#" class="d-inline-block d-lg-none site-menu-toggle js-menu-toggle text-black float-right text-white"><span
                class="icon-menu h3 text-white"></span></a>
          </div>
        </div>
      </div>

    </header>
{% endblock %}
{% block main %}
    <div class="site-section">
        <div class="container">
            <div class="row">
                <div class="col-12 title-section">
                    <h2 class="heading">Products</h2>
                </div>
            </div>
            <div class="row">
                {% for produit in produits %}
                    <div class="col-lg-6 mb-4">
                        <div class="bg-light p-4 rounded">
                            <div class="row">
                                <div class="col-md-6">
                                    <img src="{{ asset(produit.image) }}" alt="{{ produit.nom }}" class="img-fluid">
                                </div>
                                <div class="col-md-6">
                                    <h3>{{ produit.nom }}</h3>
                                    <p>{{ produit.description }}</p>
                                    <p>Price: {{ produit.prix }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
