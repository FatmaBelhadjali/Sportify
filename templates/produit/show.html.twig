{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% if produit.image %}
                        <img src="{{ asset(produit.image) }}" alt="Product Image" width="100" height="100">
                    {% else %}
                        No Image
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
        </tbody>
    </table>

   <div class="text-center d-none d-md-inline" style="width:100%">
    <a href="{{ path('app_produit_index') }}" class="btn btn-primary">Back to List</a>
    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-info">Edit</a>
    {{ include('produit/_delete_form.html.twig') }}
</div>


{% endblock %}
