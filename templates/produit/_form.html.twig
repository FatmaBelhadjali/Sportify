{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            <span style="color: red;">{{ form_errors(form.nom) }}</span>
        </div>
        <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            <span style="color: red;">{{ form_errors(form.description) }}</span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            {{ form_label(form.imageFile) }}
            {{ form_widget(form.imageFile) }}
            <span style="color: red;">{{ form_errors(form.imageFile) }}</span>
        </div>
        <div class="form-group">
            {{ form_label(form.prix) }}
            {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
            <span style="color: red;">{{ form_errors(form.prix) }}</span>

        </div>
    </div>
</div>

<button class="btn">{{ button_label|default('Add') }}</button>

{{ form_end(form) }}
