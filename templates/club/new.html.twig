{% extends 'base.html.twig' %}

{% block title %}New Club{% endblock %}

{% block body %}
    <div class="container-fluid d-flex flex-column" style="height: calc(100vh - 100px);">
        <div class="row flex-grow-1">
            <div class="col-md-6 px-0">
                <!-- Adjust image source as needed -->
                <img src="{{ asset('images/426720326_1372231840131743_8892876042752275258_n-66073d40b574e.jpg') }}" class="img-fluid h-100 w-100" alt="Image">
            </div>
            <div class="col-md-6">
                <div class="container mt-5"> 
                    <h1>Create new Club</h1>
                    <div class="form-container text-center">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                        <div class="form-group">
                            {{ form_label(form.nomclub, 'Nom du Club') }}
                            {{ form_widget(form.nomclub, {'attr': {'class': 'form-control'}}) }}
                            <div class="text-danger">{{ form_errors(form.nomclub) }}</div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.categorie, 'Catégorie') }}
                            {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
                            <div class="text-danger">{{ form_errors(form.categorie) }}</div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.datecreation, 'Date de Création') }}
                            {{ form_widget(form.datecreation, {'attr': {'class': 'form-control'}}) }}
                            <div class="text-danger">{{ form_errors(form.datecreation) }}</div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.nomcoach, 'Nom du Coach') }}
                            {{ form_widget(form.nomcoach, {'attr': {'class': 'form-control'}}) }}
                            <div class="text-danger">{{ form_errors(form.nomcoach) }}</div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.nbmembres, 'Nombre de Membres') }}
                            {{ form_widget(form.nbmembres, {'attr': {'class': 'form-control'}}) }}
                            <div class="text-danger">{{ form_errors(form.nbmembres) }}</div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.localisation, 'Localisation') }}
                            {{ form_widget(form.localisation, {'attr': {'class': 'form-control'}}) }}
                            <div class="text-danger">{{ form_errors(form.localisation) }}</div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.descriptionclub, 'Description du Club') }}
                            {{ form_widget(form.descriptionclub, {'attr': {'class': 'form-control'}}) }}
                            <div class="text-danger">{{ form_errors(form.descriptionclub) }}</div>
                        </div>

                        <div class="form-group">
                        {% if club.logo %}
    <img src="{{ asset('uploads/logo/' ~ club.logo) }}" alt="Logo">
{% else %}
    <p>No logo uploaded</p>
{% endif %}
                        </div>

                        <div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <a href="{{ path('app_club_index') }}" class="btn btn-secondary">Back to List</a>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
