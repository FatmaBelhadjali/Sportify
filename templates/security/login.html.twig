{% extends 'home/front.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" 
    integrity="sha512-HG2RsFiRV2m75KMSwKcDWtVygqG7aWz+lDVK+1p8thZIiKd4HHfFyV5qD2BeNmn51MHVtkQSR29gUV1xtOIs7Q==" 
    crossorigin="anonymous" />

    <div class="container wrapper">
        <div class="row justify-content-center align-items-center">
            <div class="col-md-6">
                <form method="post">

                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    <h1 class="h3 mb-3 font-weight-normal text-center">Log in here !</h1>
                    <br>
                    <div class="mb-3">
                        <label for="inputPseudo" class="sr-only">Pseudo</label>
                        <input type="text" value="{{ last_username }}" name="pseudo" id="inputPseudo" class="form-control" placeholder="Pseudo" autocomplete="username" required autofocus>
                    </div>
                    <br>
                    <div class="mb-3">
                        <label for="inputPassword" class="sr-only">Password</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" autocomplete="current-password" required>
                    </div>
                    <br>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Log in</button>
                    
                    <style>
                        .custom-div {
                            margin-left: 170px;
                            margin-right: 170px;
                            border: 1.5px solid #000000;
                            border-radius: 40px;
                            background-color: #6e6ee1;
                            
                        }
                        a{
                            color: #FFFFFF;
                        }
                    </style>

                    <div class="loginBtn loginBtn--facebook">
                                <a href="{{ path('fcb_login') }}" >Login With Facebook</a>
                    </div>
                    <br>
                    <div class="text">
                            <div class="col-md-6 text-center">
                                <h5 class="mb-0">Don't have account?</h5>
                                <a href="{{ path('app_register') }}" class="btn btn-link">SIGN UP</a>
                            </div>
                            
                            <div class="col-md-6 text-center">
                                <h5 class="mb-0">Forget your password?  </h5>
                                <a href="{{ path('app_forgot_password_request') }}" class="btn btn-link">Reset Password</a>
                            </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
