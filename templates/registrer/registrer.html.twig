{% extends 'Home/Front.html.twig' %}

{% block title %}SignUp{% endblock %}


{% block body %}
    <br><br><br><br><br><br><br><br><br><br><br>
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-md-6">
                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                <h1 class="text-center">Sign Up Here !</h1>

                {{ form_errors(form) }}

                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_row(form.pseudo, {'attr': {'class': 'form-control', 'placeholder': 'Pseudo'}}) }}
                    <div class="error-message">{{ form_errors(form.pseudo) }}</div>
                </div>
                <div class="mb-3">
                    {{ form_row(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                    <div class="error-message">{{ form_errors(form.nom) }}</div>
                </div>
                <div class="mb-3">
                    {{ form_row(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
                    <div class="error-message">{{ form_errors(form.prenom) }}</div>
                </div>
                <div class="mb-3">
                    {{ form_row(form.age, {'attr': {'class': 'form-control', 'placeholder': 'Age'}}) }}
                    <div class="error-message">{{ form_errors(form.age) }}</div>
                </div>
                <div class="mb-3">
                    {{ form_row(form.numTel, {'attr': {'class': 'form-control', 'placeholder': 'Numéro de téléphone'}}) }}
                    <div class="error-message">{{ form_errors(form.numTel) }}</div>
                </div>
                <div class="mb-3">
                    {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                    <div class="error-message">{{ form_errors(form.email) }}</div>
                </div>
                <div class="mb-3">
                    {{ form_row(form.cin, {'attr': {'class': 'form-control', 'placeholder': 'CIN'}}) }}
                    <div class="error-message">{{ form_errors(form.cin) }}</div>
                </div>
                <div class="mb-3">
                    {{ form_row(form.mdp, { 'label': 'Password', 'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
                    <div class="error-message">{{ form_errors(form.mdp) }}</div>
                </div>
                <div class="mb-3">
                    {{ form_row(form.role) }}
                    <div class="error-message">{{ form_errors(form.role) }}</div>
                </div>
                

                <button type="submit" class="btn btn-lg btn-primary btn-block">Register</button>
                {{ form_end(form) }}

                <div class="row justify-content-center mt-3">
            <div class="col-md-6 text-center">
                <h3 class="mb-0">You have an account ?</h3>
                 <a href="" class="btn btn-link">SIGN UP</a> 
            </div>
        </div>
            </div>
        </div>
    </div>

    <br><br><br><br><br><br><br><br><br><br><br>
{% endblock %}
