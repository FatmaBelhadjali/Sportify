 <script>
    function applyPromoCode() {
    var promoCode = document.getElementById('promo-code').value;
    // Call the promo code validation function
    if (promoCodeValidation(promoCode)) {
        // Promo code is valid
        // Calculate discount and update final amount
        var total = parseFloat(document.getElementById('total-amount').innerText.replace('$', ''));
        var discount = 100; // Example discount amount
        var finalAmount = total - discount; // Apply discount
        document.getElementById('final-amount').innerText = '$' + finalAmount.toFixed(2);

        // Show success message using SweetAlert
        swal("Success", "Promo code applied successfully!", "success");
    } else {
        // Promo code is invalid
        // Show error message using SweetAlert
        swal("Error", "Invalid promo code! Please try again.", "error");
    }
}


   function promoCodeValidation(promoCode) {
        // Add your promo code validation logic here
        return promoCode === 'matchmate01!';
    }

    function generatePDF() {
    var doc = new jsPDF();
